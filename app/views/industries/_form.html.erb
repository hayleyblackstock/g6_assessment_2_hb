<%= form_for @industry do |f| %>

<%= f.label :name %>
<%= f.text_field :name %>



<%= f.label :description %>
<%= f.text_area :description %>


<% for company in Company.all %>
           <div>
               <%= check_box_tag "industry[company_ids][]", company.id, @industry.companies.include?(company) %>
               <%= company.name %>
           </div>
       <% end %>



<%= f.submit %>

<% end %>
