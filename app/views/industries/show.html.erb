<% if notice %>
  <p class="alert alert-success"><%= notice %></p>
<% end %>

<h1>Show Page for the <%= @industry.name %> Industry </h1>

<div> <%= link_to "Edit Industry", edit_industry_path(@industry) %> </div>
<div> <%= link_to "Delete Company", industry_path(@industry), data: { confirm: 'Are you sure?'}, :method => :delete %> </div>

<p><strong>Name:</strong> <%= @industry.name %> </p>
<p><strong>Description:</strong> <%= @industry.description %> </p>
<p><strong>Created At:</strong> <%= @industry.created_at %></p>
<p><strong>Updated At: </strong> <%= @industry.updated_at %></p>
<table>
  <thead>
    <tr>
      <th>
        Companies in Industry
      </th>
    </tr>
  </thead>
  <tbody>
    <% @industry.companies.each do |company| %>
    <tr>
      <td>
        <%=  company.name %>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>
