
<% if notice %>
  <p class="alert alert-success"><%= notice %></p>
<% end %>

<h1>Companies</h1>

<%= link_to "Create a New Company", new_company_path %>
<table>
  <thead>
    <tr>
      <th>
        Company Name
      </th>
      <th>
        Price
      </th>
      <th>
        Created At
      </th>
      <th>
        Updated At
      </th>
      <th>
        Industries Apart Of
      </th>
    </tr>
  </thead>
  <tbody>
    <% @companies.each do |company| %>
    <tr>
      <td>
        <%= link_to company.name, company_path(company) %>
      </td>
      <td>
        $<%= company.price  %>
      </td>
      <td>
        <%= company.created_at %>
      </td>
      <td>
        <%= company.updated_at  %>
      </td>
      <td>
        <% company.industries.each do |industry| %>
            <%=  industry.name %>
        <% end %>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>
