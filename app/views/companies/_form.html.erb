<%= form_for @company do |f| %>

<%= f.label :name %>
<%= f.text_field :name %>

<%= f.label :description %>
<%= f.text_area :description %>

<%= f.label :price %>
<%= f.number_field :price %>

<%= f.label :industry %>
<%= f.collection_select 'tax_ids', @taxes, :id, :name, {:name => 'line_item[tax_ids][]'} %>

<%= f.submit %>

<% end %>
